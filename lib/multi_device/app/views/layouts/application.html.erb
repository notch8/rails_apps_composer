<!DOCTYPE html>
<html>
<head>
  <title>ThreePlatformLayout</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page">
    <%= render "layouts/header" %>
    <div class="page_content">
      <%= yield %>
      <%= render "layouts/nav" %>
    </div> <!-- page_content -->
    <%= render "layouts/footer" %>
  </div><!-- page -->
  <%= debug params if Rails.env.development? %>       
</body>
</html>
